def vasenSuunta(luku):
    for i in range(0, askel, 1):
        a = luku[0]
        b = luku + a
        c = b[1:len(luku) + 1]
        luku = c
        print(c)
        
        if i + 1 == len(luku):
            print(c)

a = True

luku = input("Anna binääriluku:")

while a:
    askel = input("Anna askelten määrä:")
    try:
        askel = int(askel)
        a = False
    except:
        print("Anna numero!")
        continue
    
suunta = input("Anna pyörimissuunta (Vasen/Oikea):")

if suunta == "Vasen":
    vasenSuunta(luku)
