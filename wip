a = True
while a:
    luku = input("Anna 4-bittinen binääriluku: ")
    if len(luku) != 4:
        print("Syötteesi ei ollut nelimerkkinen.")
    else:
        a = False

luku = int(luku)
desimaali = luku[0] * 4 + luku[1] * 3 + luku[2] * 2 + luku[3] * 1
print("Binääriluku ",luku,"on desimaalilukuna ",desimaali)
